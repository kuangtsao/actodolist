<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      {{> message}}
      <form action="/user/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" class="form-control mt-2" placeholder="Enter Name" value="{{ name }}">
        </div>
        <div class="form-group">
          <label for="email" class="my-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{ email }}">
        </div>
        <div class="form-group">
          <label for="password" class="my-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="{{ password }}">
        </div>
        <div class="form-group">
          <label for="confirmPassword" class="my-2">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Confirm Password" value="{{ confirmPassword }}">
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-2">Register</button>
        <a href="/auth/facebook" class="btn btn-info btn-block mt-2">Facebook Login</a>
      </form>
      <p class="lead mt-4">
        Have An Account? <a href="/user/login">Login</a>
      </p>
    </div>
  </div>
</div>
